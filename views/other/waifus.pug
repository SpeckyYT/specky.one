body
    h1 Specky's waifus 
    p.
        Here's a list of videogame/anime women Specky likes
    
    .waifus
        for waifu of waifus
            if waifu.nsfw ? req.discord.powerLevel() > 0 : true
                .waifu(title=waifu.description)
                    h2 #{waifu.source}
                    p #{waifu.name}
                    if waifu.images
                        if waifu.images.length > 1
                            .gallery(data-index=0)
                                for image in waifu.images
                                    img.undraggable.pointer(src=image class=waifu.nsfw?"nsfw":"")
                        else
                            img.undraggable(src=waifu.images[0] class=waifu.nsfw?"nsfw":"")

style.
    .waifus {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
        grid-gap: 10px;
        margin: 0 auto;
        max-width: 80vw;
    }
    .waifu {
        border: 10px dashed #FFFFFF;
    }
    .waifu img {
        max-width: 97%;
        max-height: 33vh;
    }
    .nsfw {
        cursor: pointer;
        filter: brightness(0.2);
        backdrop-filter: brightness(0);
        transition: filter 0.3s ease-in-out;
        filter: blur(1vw) grayscale(100%);
    }
    .nsfw:hover {
        filter: blur(0.5vw) grayscale(50%);
    }
    .undraggable {
        /* https://stackoverflow.com/questions/12906789/preventing-an-image-from-being-draggable-or-selectable-without-using-js */
        user-drag: none;
        -webkit-user-drag: none;
        user-select: none;
        -moz-user-select: none;
        -webkit-user-select: none;
        -ms-user-select: none;
    }
    .gallery {
        display: flex;
        overflow: hidden;
        width: 100%;
    }
    .gallery img {
        flex: 0 0 auto;
        max-width: 100%;
        height: auto;
        transition: transform 0.5s ease;
    }
    .pointer {
        cursor: pointer;
    }

script.
    for (const nsfw of document.querySelectorAll('.nsfw')) {
        nsfw.addEventListener('click', (event) => {
            event.preventDefault();
            if (nsfw.classList.contains('nsfw')) {
                nsfw.classList.remove('nsfw');
            }
        });
    }

    document.addEventListener('DOMContentLoaded', function () {
        const galleries = document.querySelectorAll('.gallery');
        galleries.forEach(gallery => {
            let currentIndex = 0;
            const images = gallery.querySelectorAll('img');
            gallery.addEventListener('click', () => {
                currentIndex = (currentIndex + 1) % images.length;
                const offset = -currentIndex * 100;
                images.forEach(img => {
                    img.style.transform = `translateX(${offset}%)`;
                });
            });
        });
    });
